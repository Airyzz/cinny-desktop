      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
          "https://github.com/cinnyapp/cinny-desktop/releases/download/tauri/release.json"
